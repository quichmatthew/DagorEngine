Root    ?= ../../../.. ;
Location = prog/tools/sceneTools/wsos ;
include $(Root)/prog/tools/tools_setup.jam ;
ConsoleExe = yes ;

TargetType  = exe ;
Target      = tools/wsos ;

if $(OS) = LINUX {
    Platform ?= linux64 ;
} else {
    Platform ?= win32 ;
}


OutDir = $(Root)/tools/dagor3_cdk/util ;
if $(Platform) = win64 { OutDir = $(OutDir)64 ; }
if $(Platform) = winarm64 { OutDir = $(OutDir)ARM64 ; }
if $(Platform) = linux64 { OutDir = $(OutDir)-linux64 ; }

AddIncludes     = $(Root)/prog/tools/sharedInclude ;

Sources =
  wsos.cpp
  cmain.cpp
  japan.cpp
  chinese.cpp
;

UseProgLibs =
  engine/osApiWrappers
  engine/kernel
  engine/memory
  engine/ioSys
  engine/startup
  engine/baseUtil
  engine/math
  engine/coreUtil
  engine/perfMon/daProfilerStub
  tools/libTools/util
;

if $(Platform) = linux64 { UseProgLibs += engine/osApiWrappers/messageBox/stub ; }

include $(Root)/prog/_jBuild/build.jam ;
