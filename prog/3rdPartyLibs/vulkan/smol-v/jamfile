  CPPopt =
    /d2Zi+
    -DWIN32
    -DNDEBUG
    -D_CONSOLE
    -DGENERIC_COMPILER
    -DYYDEBUG=0
  ;
}


include $(Root)/prog/_jBuild/build.jam ;
