Root  ?= ../../../.. ;
Location = prog/3rdPartyLibs/openssl-3.x ;

TargetType  = lib ;
Target      = 3rdPartyLibs/openssl-3.x/crypto.lib ;
if $(NoASM) {
  Target = $(Target:S=~noasm.lib) ;
}

include $(Root)/$(Location)/ssl-options.jam ;

UseProgLibs += 3rdPartyLibs/openssl-3.x/crypto/sha ;

